<?xml version="1.0" encoding="UTF-8"?>
<scene>
    <camera type="perspective">
        <point name="eye" value="0.0, 0.0, -5.0"/>
        <point name="lookat" value="0.0, 0.0, 0.0"/>
        <point name="size" value="800, 600, 0"/>
    </camera>

    <sampler type="independent">
        <int name="sampleCount" value="32"/>
    </sampler>
    
    <integrator type="normal">
        <color name="active" value="0.5, 0.1, 0.5"/>
    </integrator>
    
    <shape type="sphere">
        <float name="radius" value="0.5"/>
        <point name="center" value="0.0, 0.0, 0.0"/>

        <transform>
            <scale value="0.7, 0.2, 0.2"/>
            <rotate axis="0, 0, 1" angle="45"/>
            <rotate axis="-1, 1, 0" angle="45"/>
            <translate value="-0.7, 0.2, 0.2"/>
        </transform>
    </shape>
</scene>